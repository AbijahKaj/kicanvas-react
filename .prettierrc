{
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "trailingComma": "all",
  "bracketSameLine": true,
  "overrides": [
    {
      "files": ["*.js", "*.ts", "*.jsx", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["tsconfig.json"],
      "options": {
        "parser": "json5",
        "quoteProps": "preserve"
      }
    }
  ]
}
